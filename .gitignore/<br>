<br>
<meta charset="UTF-8">
<script>

    function pulaLinha() {

        document.write("<br>");
        document.write("<br>");
}

    function mostra(frase) {

        document.write(frase);
        pulaLinha();
}

var totalFamiliares = parseInt(prompt("Quantidade de familiares?"));

var numero = 1;

var totalidade = 0;

while(numero <= totalFamiliares) {

var idade = parseInt(prompt("Informe idade do familiar"));
totalidade = totalidade + idade;
numero++;
}
var mediaDasIdades = totalidade/totalFamiliares;
mostra ("A média de idades dos familiares é " + mediaDasIdades)
mostra("FIM");

</script>
